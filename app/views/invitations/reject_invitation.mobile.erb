<div class="info"><%= @message %></div>

<% unless @invitation.nil? %>
		<% form_tag :controller => 'invitations', 
				 	:action => 'set_additional_players', 
					:refusal_code => @invitation.refusal_code,
					:class => 'form' do -%> 
			<ul class="rounded">
			 <li><%= text_field_tag( :num_additional_players, 
									 nil, 
 									 :placeholder => 'Please specify how many of your friends (not in the mailing list) are coming') %></li>
			</ul>
			 <%= submit_tag "submit", :class => 'button' %>
			
		<% end %>		
		<%= link_to 'Go to current match', match_path(@invitation.match), :class => 'whiteButton fade' %>
<% end %>