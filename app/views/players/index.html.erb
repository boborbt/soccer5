<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Email</th>
    <th>Invite always</th>
  </tr>

<% for player in @players %>
  <tr>
    <td><%=h player.name %></td>
    <td><%=h(player.user.login) unless player.user.nil? %></td>
    <td><%=h player.email %></td>
    <td><%=h player.invite_always %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

