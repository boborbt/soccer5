<% form_tag deliver_mail_path, :method => :post do -%>
	<%= label_tag 'recipients'%><br>
	<%= text_area_tag 'recipients', @recipients, {:rows => 3, :cols => 80} %> <br>
	<%= label_tag 'subject' %><br>
	<%= text_area_tag 'subject', @subject, {:rows => 1, :cols => 80} %> <br>
	
	<%= text_area_tag 'body', @body, {:rows => 10, :cols => 80} %> <br>
	<%= submit_tag 'Send' %>
<%- end -%>
	
	