<h1>Listing matches</h1>

<table>
  <tr>
	<th>Location</th>
	<th>Date</th>
	<th>Time</th>
  </tr>

<% for match in @matches %>
  <tr>
	<td><%=h match.location.name %></td>
	<td><%= match.date.to_s(:short) %></td>
	<td><%= match.time %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New match', new_group_match_path(@group) %>
